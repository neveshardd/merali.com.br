---
import { getProjectsFromCRM } from '../lib/crm';

const dbProjects = await getProjectsFromCRM();

// Filter featured projects or fallback to first 5, prioritizing featured
let selectedProjects = dbProjects.filter(p => p.featured);

// If no featured projects, take the most recent 5
// Fallback removed: only show explicitly featured projects
// if (selectedProjects.length === 0) {
//     selectedProjects = dbProjects.slice(0, 5);
// }

// Map only selected projects for modal
const modalProjects = selectedProjects.map((p, index) => {
    let images: string[] = [];
    try { images = JSON.parse(p.images || '[]'); } catch { images = [p.images || '']; }
    return {
        ...p,
        image: images[0] || '/hero-render.png',
        // default visual props if needed inside modal logic, 
        // though modal mainly uses raw data.
    };
});

// Featured logic for display
// Redundant declaration removed

// Fallback removed per user request: if no featured projects, show none.
// if (selectedProjects.length === 0) selectedProjects = dbProjects.slice(0, 5);

const featuredProjects = selectedProjects.slice(0, 5).map((p, index) => {
    // ... same visual mapping logic ...
    let images: string[] = [];
    try { images = JSON.parse(p.images || '[]'); } catch { images = [p.images || '']; }

// Adjust sizes for 4-column grid. User requested vertical images in columns, horizontal ones 'small' (1x1).
    // So fewer 'wide' items, mostly 'tall' or 'normal'.
    const sizes = ['tall', 'normal', 'normal', 'tall', 'normal', 'normal', 'tall', 'normal'];
    const positions = ['center', 'center', 'center', 'center', 'center', 'center', 'center', 'center']; // Simplify positions
    
    return {
        ...p,
        image: images[0] || '/hero-render.png',
        size: sizes[index % sizes.length],
        position: positions[index % positions.length]
    };
});
import ProjectModal from './ProjectModal.astro';
---

<section id="projetos" class="projects-section">
    <ProjectModal projects={modalProjects} />
	<div class="container">
		<div class="section-header">
			<h2 class="section-title">PROJETOS SELECIONADOS</h2>
			<a href="/projetos" class="view-all">VER TODOS &rarr;</a>
		</div>

		<div class={`gallery ${featuredProjects.length <= 2 ? 'few-items' : ''}`}>
            {featuredProjects.length > 0 ? featuredProjects.map((project) => (
                <div class={`project-item ${project.size}`} onclick={`window.openProjectModal('${project.id}')`}>
                    <div class="image-wrapper">
                        <img src={project.image} alt={project.title} loading="lazy" />
                        <div class="overlay"></div>
                        <div class="project-info">
                            <h3 class="project-title">{project.title}</h3>
                        </div>
                    </div>
                </div>
            )) : (
                <div class="empty-gallery">
                    <p>Portfólio em atualização.</p>
                </div>
            )}
		</div>
	</div>
</section>

<style>
	.projects-section {
		padding: 6rem 2rem;
		background-color: #13151a;
		color: white;
	}

	.container {
		max-width: 1400px;
		margin: 0 auto;
        padding: 0 1rem;
	}

	.section-header {
		display: flex;
		justify-content: space-between;
		align-items: flex-end;
		margin-bottom: 2rem;
		border-bottom: 1px solid rgba(255, 255, 255, 0.1);
		padding-bottom: 1rem;
	}

	.section-title {
		font-size: 1.25rem;
		font-weight: 300;
		letter-spacing: 2px;
		margin: 0;
	}

	.view-all {
		font-size: 0.8rem;
		letter-spacing: 1px;
		opacity: 0.7;
		transition: opacity 0.3s ease;
		color: white;
		text-decoration: none;
	}

	.view-all:hover {
		opacity: 1;
	}

	/* Grid Layout Simplificado e Robusto */
	.gallery {
		display: grid;
		grid-template-columns: repeat(4, 1fr); /* 4 Colunas Fixas por padrão */
		gap: 1.5rem;
        align-items: start; /* Alinhar ao topo */
	}

    /* Ajuste dinâmico quando há poucos itens (ex: 2) */
    .gallery.few-items {
        grid-template-columns: repeat(2, 1fr);
    }

    .empty-gallery {
        grid-column: 1 / -1;
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 200px;
        border: 1px dashed rgba(255,255,255,0.1);
        color: rgba(255,255,255,0.5);
    }

	.project-item {
        /* Forçar ocupação de apenas 1 coluna */
        grid-column: span 1;
        
        display: block;
		position: relative;
		overflow: hidden;
		cursor: pointer;
        background: #222;
        border-radius: 4px;
        margin: 0;
	}

	.image-wrapper {
		width: 100%;
		position: relative;
		transition: transform 0.6s cubic-bezier(0.25, 1, 0.5, 1);
        font-size: 0;
        line-height: 0;
	}

	.project-item:hover .image-wrapper {
		transform: scale(1.05);
	}

	.project-item img {
		width: 100%;
		height: auto;
		display: block;
		transition: transform 0.3s ease;
	}

	.project-item:hover img {
	}

	.overlay {
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: linear-gradient(to top, rgba(0,0,0,0.8) 0%, rgba(0,0,0,0) 50%);
		opacity: 0;
        transition: opacity 0.3s;
	}

	.project-item:hover .overlay {
		opacity: 1;
	}

	.project-info {
		position: absolute;
		bottom: 1.5rem;
		left: 1.5rem;
		right: 1.5rem;
		z-index: 2;
		opacity: 0;
		transform: translateY(10px);
		transition: all 0.3s ease;
        pointer-events: none;
	}

	.project-title {
		font-size: 0.9rem;
		font-weight: 500;
		letter-spacing: 1px;
		color: white;
		text-transform: uppercase;
        margin: 0;
        
        /* Force line break */
        display: block !important;
        white-space: normal !important;
        word-wrap: break-word !important;
        word-break: break-word !important; 
        overflow-wrap: break-word !important;
        
        line-height: 1.3;
        text-align: left;
        text-shadow: 1px 1px 2px rgba(0,0,0,0.8);
	}
    
    .project-item:hover .project-info {
        opacity: 1;
        transform: translateY(0);
    }

	/* Responsive Adjustments */
    @media (max-width: 600px) {
        .project-title {
            font-size: 0.8rem; /* Smaller font on mobile to fit */
            bottom: 1rem;
            left: 1rem;
            right: 1rem;
        }
    }

	@media (max-width: 1200px) {
		.gallery {
            grid-template-columns: repeat(3, 1fr);
		}
	}

	@media (max-width: 900px) {
		.gallery {
            grid-template-columns: repeat(2, 1fr);
		}
	}

	@media (max-width: 600px) {
		.gallery {
			grid-template-columns: 1fr;
		}
	}
</style>

<!-- Removendo script Masonry JS temporariamente para garantir layout grid básico horizontal -->
<!-- Se o usuário ainda quiser o encaixe vertical perfeito (sem buracos), podemos reativar o masonry.js ou usar CSS columns se a ordem não importar tanto -->
<!-- Como ele reclamou de "uma embaixo da outra" e "preencher linha 1 depois linha 2", o Grid normal é o mais seguro agora. 
     Se as imagens tiverem proporções muito diferentes, ficarão desalinhadas embaixo, mas corretas na linha. -->
