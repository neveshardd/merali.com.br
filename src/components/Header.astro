<header class="header">
    <div class="header-container">
        <div class="left-group">
            <div class="logo">
                <a href="/">
                    <img src="/logo.png" alt="Meralis Logo" />
                </a>
            </div>
            <nav class="desktop-nav">
                <ul>
                    <li><a href="/">INÍCIO</a></li>
                    <li><a href="/projetos">PROJETOS</a></li>
                    <li><a href="/escritorio">STUDIO</a></li>
                    <li><a href="/servicos">SERVIÇOS</a></li>
                    <li><a href="/contato">CONTATO</a></li>
                </ul>
            </nav>
        </div>
        
        <div class="hamburger">
            <span></span>
            <span></span>
            <span></span>
        </div>
    </div>

    <div class="mobile-menu">
        <nav>
            <ul>
                <li><a href="/">INÍCIO</a></li>
                <li><a href="/projetos">PROJETOS</a></li>
                <li><a href="/escritorio">STUDIO</a></li>
                <li><a href="/servicos">SERVIÇOS</a></li>
                <li><a href="/contato">CONTATO</a></li>
            </ul>
        </nav>
    </div>
</header>

<style>
	.header {
		width: 100%;
		position: absolute;
		top: 0;
		left: 0;
		z-index: 100;
		color: white;
        padding: 2rem 0; /* Vertical padding only */
	}

    .header-container {
        max-width: 1100px;
        margin: 0 auto;
        padding: 0; /* Aligned with Projects Gallery (no padding) */
        display: flex;
        justify-content: space-between;
        align-items: center;
        width: 100%;
    }

    @media (max-width: 1150px) {
        .header-container {
            padding: 0 2rem;
        }
    }

	.left-group {
		display: flex;
		align-items: center;
		gap: 4rem; /* Spacing between logo and nav links */
	}

	.logo a {
		display: flex;
		align-items: center;
		gap: 0.5rem;
	}

	.logo img {
		height: 25px;
		filter: brightness(0) invert(1); 
	}

	/* Desktop Nav Styles */
	.desktop-nav ul {
		display: flex;
		gap: 2rem;
	}

	.desktop-nav a {
		font-size: 0.8rem;
		font-weight: 500;
		letter-spacing: 1px;
		transition: opacity 0.3s ease;
		text-transform: uppercase;
		opacity: 0.8;
	}

	.desktop-nav a:hover {
		opacity: 1;
	}

    /* Hamburger Styles - Always Visible on Right per request */
	.hamburger {
		display: flex;
		flex-direction: column;
		gap: 6px;
		cursor: pointer;
        z-index: 101; /* Above mobile menu */
	}

	.hamburger span {
		width: 30px;
		height: 2px;
		background-color: white;
        transition: transform 0.3s ease, opacity 0.3s ease;
	}

    /* Hamburger Animation States */
    .hamburger.active span:nth-child(1) {
        transform: rotate(45deg) translate(5px, 6px);
    }
    .hamburger.active span:nth-child(2) {
        opacity: 0;
    }
    .hamburger.active span:nth-child(3) {
        transform: rotate(-45deg) translate(5px, -6px);
    }

    /* Mobile/Overlay Menu Styles */
    .mobile-menu {
        position: fixed;
        top: 0;
        right: -100%;
        height: 100vh;
        width: 100%;
        background-color: #13151a;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        transition: right 0.4s cubic-bezier(0.77, 0, 0.175, 1);
        z-index: 100;
    }

    .mobile-menu.active {
        right: 0;
    }

    .mobile-menu ul {
        display: flex;
        flex-direction: column;
        gap: 2rem;
        text-align: center;
    }

    .mobile-menu a {
        font-size: 1.5rem;
        font-weight: 300;
        letter-spacing: 2px;
        text-transform: uppercase;
        color: white;
        transition: opacity 0.3s ease;
        opacity: 0.6;
    }
    
    .mobile-menu a:hover {
        opacity: 1;
    }

	@media (max-width: 1024px) {
        /* On medium screens, maybe hide desktop nav if too crowded? 
           User didn't specify, but safer to keep pattern. 
           However, user asked for links on LEFT and hamburger on RIGHT.
           I will keep desktop nav until it breaks. */
    }

	@media (max-width: 768px) {
		.header-container {
			padding: 0 2rem;
		}

        .left-group {
            gap: 0;
        }

		.desktop-nav {
			display: none; /* Hide desktop nav on mobile to avoid crowding */
		}
	}
</style>

<script>
    const hamburger = document.querySelector('.hamburger');
    const mobileMenu = document.querySelector('.mobile-menu');

    if (hamburger && mobileMenu) {
        hamburger.addEventListener('click', () => {
            hamburger.classList.toggle('active');
            mobileMenu.classList.toggle('active');
        });
    }
</script>
